#include <stdio.h>
#include <string.h>

int main() 
{
    char a[100];
    printf("Enter sentence: ");
    scanf(a);
    int count = 0;
    
    for (int i = 0; i < strlen(a); i++)
    
    {
        if (a[i] == ' ' && a[i + 1] != ' ') {
            count++;
        }
    }
    
    if (strlen(a) > 0 && a[0] != ' ')
    {
        count++;
    }

    printf("The number of words: %d\n", count);
    return 0;
}
